<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Hello  World"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:id="@+id/textView" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView"
        android:src="@drawable/rond"
        android:layout_marginBottom="54dp"
        android:layout_marginRight="30dp"
        android:layout_above="@+id/occurence"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView2"
        android:src="@drawable/croix"

        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/numberPicker"
        android:layout_alignStart="@+id/numberPicker" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView3"
        android:src="@drawable/fleche"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@id/seekBar1"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Veuillez choisir l&apos;image"
        android:id="@+id/choixImage"
        android:singleLine="false"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/occurence"
        android:layout_alignStart="@+id/occurence" />

    <NumberPicker
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/numberPicker"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Veuillez choisir le nombre d&apos;occurences"
        android:id="@+id/occurence"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/numberPicker"
        android:layout_alignLeft="@+id/vitesse"
        android:layout_alignStart="@+id/vitesse" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:max="10"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Veuillez séléctionner la vitesse"
        android:id="@+id/vitesse"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/seekBar1"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

</RelativeLayout>